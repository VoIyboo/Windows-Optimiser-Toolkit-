<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quinn Optimiser Toolkit"
        Height="650"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#0F172A"
        Topmost="True">

    <Window.Resources>
        <!-- Basic colours -->
        <SolidColorBrush x:Key="AccentBrush"   Color="#2563EB" />
        <SolidColorBrush x:Key="CardBrush"     Color="#020617" />
        <SolidColorBrush x:Key="BorderBrush"   Color="#374151" />
        <SolidColorBrush x:Key="TextSubtle"    Color="#9CA3AF" />

        <!-- Simple button style -->
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="6,3" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="{StaticResource AccentBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}" />
        </Style>

      <!-- GroupBox style -->
<Style TargetType="GroupBox">
    <Setter Property="Margin" Value="10" />
    <Setter Property="Padding" Value="8" />
    <Setter Property="Background" Value="{StaticResource CardBrush}" />
    <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
    <Setter Property="BorderThickness" Value="1" />

    <Setter Property="Template">
        <Setter.Value>
            <ControlTemplate TargetType="GroupBox">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0"
                            Background="{TemplateBinding Background}"
                            Margin="12,4,12,0">
                        <TextBlock Text="{TemplateBinding Header}"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#E5E7EB"
                                   Margin="4,2,4,4" />
                    </Border>

                    <!-- Body -->
                    <Border Grid.Row="1"
                            Margin="0,6,0,0"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter Margin="10,8,10,10" />
                    </Border>
                </Grid>
            </ControlTemplate>
        </Setter.Value>
    </Setter>
</Style>

        <!-- Tabs -->
        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#111827" />
            <Setter Property="Padding" Value="10,4" />
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFFFFF" />
                    <Setter Property="Foreground" Value="{StaticResource AccentBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="#020617"
                Padding="10"
                BorderBrush="#111827"
                BorderThickness="0,0,0,1">
            <DockPanel>
                <StackPanel Orientation="Vertical" DockPanel.Dock="Left">
                    <TextBlock Text="Quinn Optimiser Toolkit"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White" />
                    <TextBlock x:Name="SummaryText"
                               Text="System summary will appear here"
                               Foreground="{StaticResource TextSubtle}"
                               FontSize="11" />
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main tabs -->
        <TabControl Grid.Row="1" x:Name="MainTabs" Margin="10">
            <!-- Tweaks & Cleaning -->
            <TabItem Header="Tweaks &amp; Cleaning">
                <Grid Margin="5,10,5,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

<GroupBox Header="Cleaning &amp; Maintenance" Grid.Column="0">
    <StackPanel Margin="8">

        <!-- Storage cleanup -->
        <TextBlock Text="Storage cleanup"
                   Foreground="{StaticResource TextSubtle}"
                   FontSize="13"
                   FontWeight="SemiBold"
                   Margin="0,0,0,4" />

        <CheckBox x:Name="CbCleanTempFiles"
                  Content="Clear temporary files"
                  Foreground="White"
                  FontSize="14"
                  Margin="0,0,0,2" />

        <CheckBox x:Name="CbEmptyRecycleBin"
                  Content="Empty Recycle Bin"
                  Foreground="White"
                  FontSize="14"
                  Margin="0,0,0,2" />

        <CheckBox x:Name="CbCleanDoCache"
                  Content="Clean Delivery Optimisation cache"
                  Foreground="White"
                  FontSize="14"
                  Margin="0,0,0,2" />

        <CheckBox x:Name="CbCleanWuCache"
                  Content="Clear Windows Update cache"
                  Foreground="White"
                  FontSize="14"
                  Margin="0,0,0,2" />

        <CheckBox x:Name="CbCleanThumbCache"
                  Content="Clean thumbnail cache"
                  Foreground="White"
                  FontSize="14"
                  Margin="0,0,0,8" />

        <Separator Margin="0,4,0,8" />

        <!-- Windows housekeeping -->
        <TextBlock Text="Windows housekeeping"
                   Foreground="{StaticResource TextSubtle}"
                   FontSize="13"
                   FontWeight="SemiBold"
                   Margin="0,0,0,4" />

        <CheckBox x:Name="CbCleanErrorLogs"
                  Content="Clean old error logs and crash dumps"
                  Foreground="White"
                  FontSize="14"
                  Margin="0,0,0,2" />

        <CheckBox x:Name="CbCleanSetupLeftovers"
                  Content="Remove safe setup / upgrade leftovers"
                  Foreground="White"
                  FontSize="14"
                  Margin="0,0,0,2" />

        <CheckBox x:Name="CbClearStoreCache"
                  Content="Clear Microsoft Store cache"
                  Foreground="White"
                  FontSize="14"
                  Margin="0,0,0,8" />

        <Separator Margin="0,4,0,8" />

        <!-- Browser cleanup (light, non-destructive) -->
        <TextBlock Text="Browser cleanup (light)"
                   Foreground="{StaticResource TextSubtle}"
                   FontSize="13"
                   FontWeight="SemiBold"
                   Margin="0,0,0,4" />

        <CheckBox x:Name="CbEdgeLightCleanup"
                  Content="Light clean of Microsoft Edge cache"
                  Foreground="White"
                  FontSize="14"
                  Margin="0,0,0,2" />

        <CheckBox x:Name="CbChromeLightCleanup"
                  Content="Light clean of Chrome / Chromium cache"
                  Foreground="White"
                  FontSize="14"
                  Margin="0,0,0,2" />

    </StackPanel>
</GroupBox>



                    <GroupBox Header="Tweaks &amp; Privacy" Grid.Column="1">
    <StackPanel Margin="8">

        <!-- Start menu & recommendations -->
        <TextBlock Text="Start menu & recommendations"
                   Foreground="{StaticResource TextSubtle}"
                   FontSize="13"
                   FontWeight="SemiBold"
                   Margin="0,0,0,4" />

        <CheckBox x:Name="CbDisableStartRecommended"
                  Content="Hide Start menu recommended items"
                  Foreground="White"
                  FontSize="14"
                  Margin="0,0,0,2" />

        <CheckBox x:Name="CbDisableSuggestedApps"
                  Content="Turn off suggested apps and promotions"
                  Foreground="White"
                  FontSize="14"
                  Margin="0,0,0,2" />

        <CheckBox x:Name="CbDisableTipsStart"
                  Content="Disable tips and suggestions in Start"
                  Foreground="White"
                  FontSize="14"
                  Margin="0,0,0,8" />

        <Separator Margin="0,4,0,8" />

        <!-- Taskbar & widgets -->
        <TextBlock Text="Taskbar & widgets"
                   Foreground="{StaticResource TextSubtle}"
                   FontSize="13"
                   FontWeight="SemiBold"
                   Margin="0,0,0,4" />

        <CheckBox x:Name="CbDisableWidgets"
                  Content="Turn off Widgets"
                  Foreground="White"
                  FontSize="14"
                  Margin="0,0,0,2" />

        <CheckBox x:Name="CbDisableTaskbarNews"
                  Content="Turn off News / taskbar content"
                  Foreground="White"
                  FontSize="14"
                  Margin="0,0,0,2" />

        <CheckBox x:Name="CbDisableMeetNow"
                  Content="Hide legacy Meet Now button (if present)"
                  Foreground="White"
                  FontSize="14"
                  Margin="0,0,0,8" />

        <Separator Margin="0,4,0,8" />

        <!-- Privacy & telemetry (safe level) -->
        <TextBlock Text="Privacy & telemetry (safe level)"
                   Foreground="{StaticResource TextSubtle}"
                   FontSize="13"
                   FontWeight="SemiBold"
                   Margin="0,0,0,4" />

        <CheckBox x:Name="CbDisableAdvertisingId"
                  Content="Turn off advertising ID"
                  Foreground="White"
                  FontSize="14"
                  Margin="0,0,0,2" />

        <CheckBox x:Name="CbLimitFeedbackPrompts"
                  Content="Reduce feedback and survey prompts"
                  Foreground="White"
                  FontSize="14"
                  Margin="0,0,0,2" />

        <CheckBox x:Name="CbDisableOnlineTips"
                  Content="Disable online tips and suggestions"
                  Foreground="White"
                  FontSize="14"
                  Margin="0,0,0,2" />

    </StackPanel>
</GroupBox>

                </Grid>
            </TabItem>

            <!-- Apps -->
            <TabItem Header="Apps">
                <Grid Margin="5,10,5,5">
                    <GroupBox Header="Apps (placeholder)">
                        <TextBlock Text="Installed apps and common installs will appear here."
                                   Foreground="{StaticResource TextSubtle}"
                                   TextWrapping="Wrap" />
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Advanced -->
            <TabItem Header="Advanced">
                <Grid Margin="5,10,5,5">
                    <GroupBox Header="Advanced features (placeholder)">
                        <TextBlock Text="Advanced cleaning and network / services tools will appear here."
                                   Foreground="{StaticResource TextSubtle}"
                                   TextWrapping="Wrap" />
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status bar -->
        <Border Grid.Row="2"
                Background="#020617"
                Padding="6"
                BorderBrush="#111827"
                BorderThickness="1,1,1,0">
            <DockPanel>
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                    <TextBlock Text="Status: " Foreground="{StaticResource TextSubtle}" />
                    <TextBlock x:Name="StatusLabel"
                               Text="Idle"
                               Foreground="White" />
                </StackPanel>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <Button x:Name="RunButton"
                            Content="Run selected actions"
                            Width="160"
                            Margin="0,0,10,0" />
                    <ProgressBar x:Name="MainProgress"
                                 Width="200"
                                 Height="16"
                                 Minimum="0"
                                 Maximum="100"
                                 Value="0" />
                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>
</Window>
