<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quinn Optimiser Toolkit"
        Height="650"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#0F172A">

    <Window.Resources>
        <!-- Basic colours -->
        <SolidColorBrush x:Key="AccentBrush"   Color="#2563EB" />
        <SolidColorBrush x:Key="CardBrush"     Color="#020617" />
        <SolidColorBrush x:Key="BorderBrush"   Color="#374151" />
        <SolidColorBrush x:Key="TextSubtle"    Color="#9CA3AF" />

        <!-- Simple button style -->
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="6,3" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="{StaticResource AccentBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}" />
        </Style>

        <!-- GroupBox style -->
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Padding" Value="8" />
            <Setter Property="Background" Value="{StaticResource CardBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                                   Foreground="{StaticResource AccentBrush}"
                                   FontWeight="Bold" />
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Tabs -->
        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#111827" />
            <Setter Property="Padding" Value="10,4" />
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFFFFF" />
                    <Setter Property="Foreground" Value="{StaticResource AccentBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="#020617"
                Padding="10"
                BorderBrush="#111827"
                BorderThickness="0,0,0,1">
            <DockPanel>
                <StackPanel Orientation="Vertical" DockPanel.Dock="Left">
                    <TextBlock Text="Quinn Optimiser Toolkit"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White" />
                    <TextBlock x:Name="SummaryText"
                               Text="System summary will appear here"
                               Foreground="{StaticResource TextSubtle}"
                               FontSize="11" />
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main tabs -->
        <TabControl Grid.Row="1" x:Name="MainTabs" Margin="10">
            <!-- Tweaks & Cleaning -->
            <TabItem Header="Tweaks &amp; Cleaning">
                <Grid Margin="5,10,5,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <GroupBox Header="Cleaning &amp; Maintenance" Grid.Column="0">
                        <TextBlock Text="Cleaning actions will live here."
                                   Foreground="{StaticResource TextSubtle}"
                                   TextWrapping="Wrap" />
                    </GroupBox>

                    <GroupBox Header="Tweaks &amp; Privacy" Grid.Column="1">
                        <TextBlock Text="UI and privacy tweaks will live here."
                                   Foreground="{StaticResource TextSubtle}"
                                   TextWrapping="Wrap" />
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Apps -->
            <TabItem Header="Apps">
                <Grid Margin="5,10,5,5">
                    <GroupBox Header="Apps (placeholder)">
                        <TextBlock Text="Installed apps and common installs will appear here."
                                   Foreground="{StaticResource TextSubtle}"
                                   TextWrapping="Wrap" />
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Advanced -->
            <TabItem Header="Advanced">
                <Grid Margin="5,10,5,5">
                    <GroupBox Header="Advanced features (placeholder)">
                        <TextBlock Text="Advanced cleaning and network / services tools will appear here."
                                   Foreground="{StaticResource TextSubtle}"
                                   TextWrapping="Wrap" />
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status bar -->
        <Border Grid.Row="2"
                Background="#020617"
                Padding="6"
                BorderBrush="#111827"
                BorderThickness="1,1,1,0">
            <DockPanel>
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                    <TextBlock Text="Status: " Foreground="{StaticResource TextSubtle}" />
                    <TextBlock x:Name="StatusLabel"
                               Text="Idle"
                               Foreground="White" />
                </StackPanel>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <Button x:Name="RunButton"
                            Content="Run selected actions"
                            Width="160"
                            Margin="0,0,10,0" />
                    <ProgressBar x:Name="MainProgress"
                                 Width="200"
                                 Height="16"
                                 Minimum="0"
                                 Maximum="100"
                                 Value="0" />
                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>
</Window>
