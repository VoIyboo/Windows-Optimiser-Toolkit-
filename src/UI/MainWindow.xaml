<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quinn Optimiser Toolkit"
        Height="650"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#0F172A"
        Topmost="True">

    <!-- ===================== -->
    <!-- Resources & Styling -->
    <!-- ===================== -->
    <Window.Resources>

        <!-- Basic colours -->
        <SolidColorBrush x:Key="AccentBrush" Color="#2563EB" />
        <SolidColorBrush x:Key="CardBrush" Color="#020617" />
        <SolidColorBrush x:Key="BorderBrush" Color="#374151" />
        <SolidColorBrush x:Key="TextSubtle" Color="#9CA3AF" />
        <SolidColorBrush x:Key="SoftSeparator" Color="#4B5563" />

        <!-- Base button -->
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="6,3" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="{StaticResource AccentBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}" />
        </Style>

        <!-- Primary CTA -->
        <Style x:Key="PrimaryButton"
               TargetType="Button"
               BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- GroupBox -->
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="10" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Background" Value="{StaticResource CardBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0"
                                    Background="{TemplateBinding Background}"
                                    Padding="12,4"
                                    BorderBrush="{StaticResource AccentBrush}"
                                    BorderThickness="0,0,0,2">
                                <ContentPresenter ContentSource="Header" />
                            </Border>

                            <Border Grid.Row="1"
                                    Margin="0,4,0,0"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter Margin="12,10" />
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section heading -->
        <Style x:Key="SectionHeading" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSubtle}" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,0,0,6" />
        </Style>

        <!-- Checkbox -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="4,2,0,2" />
        </Style>

        <!-- Separator -->
        <Style TargetType="Separator">
            <Setter Property="Margin" Value="0,8" />
            <Setter Property="Height" Value="1" />
            <Setter Property="Background" Value="{StaticResource SoftSeparator}" />
        </Style>

        <!-- Tabs -->
        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#111827" />
            <Setter Property="Padding" Value="10,4" />
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#020617" />
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <!-- ===================== -->
    <!-- Layout -->
    <!-- ===================== -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="#020617"
                Padding="10"
                BorderBrush="#111827"
                BorderThickness="0,0,0,1">
            <DockPanel>

                <Button x:Name="BtnSettings"
                        DockPanel.Dock="Right"
                        Width="36"
                        Height="36"
                        Background="Transparent"
                        BorderBrush="{StaticResource BorderBrush}"
                        ToolTip="Settings">
                    <TextBlock FontFamily="Segoe MDL2 Assets"
                               FontSize="16"
                               Foreground="{StaticResource TextSubtle}"
                               Text="&#xE713;" />
                </Button>

                <StackPanel>
                    <TextBlock Text="Quinn Optimiser Toolkit"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White" />
                    <TextBlock x:Name="SummaryText"
                               Text="System summary will appear here"
                               Foreground="{StaticResource TextSubtle}"
                               FontSize="11" />
                </StackPanel>

            </DockPanel>
        </Border>

        <!-- Main content -->
        <ContentControl Grid.Row="1" Margin="10" x:Name="MainContentHost">
            <TabControl x:Name="MainTabControl"
                        Background="#0F172A"
                        BorderBrush="#111827"
                        BorderThickness="1">

                <!-- Tabs omitted here for brevity in this explanation -->
                <!-- Your Tweaks, Apps, Advanced, and Tickets tabs remain unchanged -->

            </TabControl>
        </ContentControl>

        <!-- Status bar -->
        <Border Grid.Row="2"
                Background="#020617"
                Padding="8,6"
                BorderBrush="#111827"
                BorderThickness="1,1,1,0">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid Margin="0,0,12,0">
                    <ProgressBar x:Name="MainProgress"
                                 Height="28"
                                 Minimum="0"
                                 Maximum="100"
                                 Background="#1E293B"
                                 Foreground="#2563EB" />
                    <TextBlock x:Name="StatusLabel"
                               Text="Idle"
                               Foreground="White"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False" />
                </Grid>

                <StackPanel Grid.Column="1">
                    <Button x:Name="RunButton"
                            Content="Run selected actions"
                            Width="190"
                            Style="{StaticResource PrimaryButton}" />
                    <TextBlock x:Name="SelectedActionsText"
                               Text="Selected actions: summary coming soon"
                               Foreground="{StaticResource TextSubtle}"
                               FontSize="11"
                               HorizontalAlignment="Right" />
                </StackPanel>

            </Grid>
        </Border>

    </Grid>
</Window>
