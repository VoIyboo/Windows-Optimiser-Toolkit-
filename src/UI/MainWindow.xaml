<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quinn Optimiser Toolkit"
        Height="650"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#0F172A"
        Topmost="True">

    <Window.Resources>
        <!-- Basic colours -->
        <SolidColorBrush x:Key="AccentBrush" Color="#2563EB" />
        <SolidColorBrush x:Key="CardBrush" Color="#020617" />
        <SolidColorBrush x:Key="BorderBrush" Color="#374151" />
        <SolidColorBrush x:Key="TextSubtle" Color="#9CA3AF" />
        <SolidColorBrush x:Key="SoftSeparator" Color="#4B5563" />

        <!-- Simple button style -->
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="6,3" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="{StaticResource AccentBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}" />
        </Style>

        <!-- Primary CTA button (used for Run selected actions) -->
        <Style x:Key="PrimaryButton"
               TargetType="Button"
               BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- GroupBox style -->
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="10" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Background" Value="{StaticResource CardBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!-- Header bar -->
                            <Border Grid.Row="0"
                                    Background="{TemplateBinding Background}"
                                    Padding="12,4,12,4"
                                    BorderBrush="{StaticResource AccentBrush}"
                                    BorderThickness="0,0,0,2">
                                <ContentPresenter ContentSource="Header"
                                                  VerticalAlignment="Center" />
                            </Border>

                            <!-- Content card -->
                            <Border Grid.Row="1"
                                    Margin="0,4,0,0"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter Margin="12,10,12,10" />
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section heading style -->
        <Style x:Key="SectionHeading" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSubtle}" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,0,0,6" />
        </Style>

        <!-- Checkbox style -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="4,2,0,2" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <!-- Softer separators -->
        <Style TargetType="Separator">
            <Setter Property="Margin" Value="0,8,0,8" />
            <Setter Property="Height" Value="1" />
            <Setter Property="Background" Value="{StaticResource SoftSeparator}" />
        </Style>

        <!-- Tabs -->
        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#111827" />
            <Setter Property="Padding" Value="10,4" />
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#020617" />
                    <Setter Property="Foreground" Value="White" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Dark DataGrid style (global) -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#020617" />
            <Setter Property="Foreground" Value="#E5E7EB" />
            <Setter Property="BorderBrush" Value="#374151" />
            <Setter Property="GridLinesVisibility" Value="Horizontal" />
            <Setter Property="HeadersVisibility" Value="Column" />
            <Setter Property="CanUserAddRows" Value="False" />
            <Setter Property="CanUserDeleteRows" Value="False" />
            <Setter Property="RowBackground" Value="#020617" />
            <Setter Property="AlternatingRowBackground" Value="#020617" />
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#0F172A" />
            <Setter Property="Foreground" Value="#E5E7EB" />
            <Setter Property="BorderBrush" Value="#374151" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="#020617" />
            <Setter Property="Foreground" Value="#E5E7EB" />
            <Setter Property="BorderBrush" Value="#374151" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0B1220" />
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#2563EB" />
                    <Setter Property="Foreground" Value="#FFFFFF" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Background" Value="#020617" />
            <Setter Property="Foreground" Value="#E5E7EB" />
            <Setter Property="BorderBrush" Value="#374151" />
            <Setter Property="Padding" Value="6,3" />
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#2563EB" />
                    <Setter Property="Foreground" Value="#FFFFFF" />
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="#020617"
                Padding="10"
                BorderBrush="#111827"
                BorderThickness="0,0,0,1">
            <DockPanel>

                <!-- Settings button (top right) -->
                <Button x:Name="BtnSettings"
                        DockPanel.Dock="Right"
                        Width="36"
                        Height="36"
                        Margin="0,0,6,0"
                        VerticalAlignment="Top"
                        Background="Transparent"
                        BorderBrush="{StaticResource BorderBrush}"
                        ToolTip="Settings">
                    <TextBlock x:Name="BtnSettingsIcon"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="16"
                               Foreground="{StaticResource TextSubtle}"
                               Text="&#xE713;"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                </Button>

                <!-- App title -->
                <StackPanel Orientation="Vertical" DockPanel.Dock="Left">
                    <TextBlock Text="Quinn Optimiser Toolkit"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White" />
                    <TextBlock x:Name="SummaryText"
                               Text="System summary will appear here"
                               Foreground="{StaticResource TextSubtle}"
                               FontSize="11" />
                </StackPanel>

            </DockPanel>
        </Border>

        <!-- Main tabs -->
        <ContentControl Grid.Row="1" Margin="10" x:Name="MainContentHost">
            <TabControl x:Name="MainTabControl"
                        Background="#0F172A"
                        BorderBrush="#111827"
                        BorderThickness="1"
                        Padding="0">

                <!-- Tweaks & Cleaning -->
                <TabItem x:Name="TabCleaning" Header="Tweaks &amp; Cleaning">
                    <Grid Margin="5,10,5,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <GroupBox Header="Cleaning &amp; Maintenance"
                                  Grid.Column="0"
                                  Margin="0,0,8,0">
                            <StackPanel Margin="4">

                                <TextBlock Text="Storage cleanup" Style="{StaticResource SectionHeading}" />
                                <CheckBox x:Name="CbCleanTempFiles" Content="Clear temporary files" />
                                <CheckBox x:Name="CbEmptyRecycleBin" Content="Empty Recycle Bin" />
                                <CheckBox x:Name="CbCleanDoCache" Content="Clean Delivery Optimisation cache" />
                                <CheckBox x:Name="CbCleanWuCache" Content="Clear Windows Update cache" />
                                <CheckBox x:Name="CbCleanThumbCache" Content="Clean thumbnail cache" />

                                <Separator />

                                <TextBlock Text="Windows housekeeping" Style="{StaticResource SectionHeading}" />
                                <CheckBox x:Name="CbCleanErrorLogs" Content="Clean old error logs and crash dumps" />
                                <CheckBox x:Name="CbCleanSetupLeftovers" Content="Remove safe setup / upgrade leftovers" />
                                <CheckBox x:Name="CbClearStoreCache" Content="Clear Microsoft Store cache" />

                                <Separator />

                                <TextBlock Text="Browser cleanup (light)" Style="{StaticResource SectionHeading}" />
                                <CheckBox x:Name="CbEdgeLightCleanup" Content="Light clean of Microsoft Edge cache" />
                                <CheckBox x:Name="CbChromeLightCleanup" Content="Light clean of Chrome / Chromium cache" />

                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Tweaks &amp; Privacy"
                                  Grid.Column="1"
                                  Margin="8,0,0,0">
                            <StackPanel Margin="4">

                                <TextBlock Text="Start menu &amp; recommendations" Style="{StaticResource SectionHeading}" />
                                <CheckBox x:Name="CbDisableStartRecommended" Content="Hide Start menu recommended items" />
                                <CheckBox x:Name="CbDisableSuggestedApps" Content="Turn off suggested apps and promotions" />
                                <CheckBox x:Name="CbDisableTipsStart" Content="Disable tips and suggestions in Start" />
                                <CheckBox x:Name="CbDisableBingSearch" Content="Turn off Bing / web results in Start search" />
                                <CheckBox x:Name="CbClassicMoreOptions" Content="Use classic 'More options' right-click menu" />

                                <Separator />

                                <TextBlock Text="Taskbar &amp; widgets" Style="{StaticResource SectionHeading}" />
                                <CheckBox x:Name="CbDisableWidgets" Content="Turn off Widgets" />
                                <CheckBox x:Name="CbDisableTaskbarNews" Content="Turn off News / taskbar content" />
                                <CheckBox x:Name="CbDisableMeetNow" Content="Hide legacy Meet Now button (if present)" />

                                <Separator />

                                <TextBlock Text="Privacy &amp; telemetry (safe level)" Style="{StaticResource SectionHeading}" />
                                <CheckBox x:Name="CbDisableAdvertisingId" Content="Turn off advertising ID" />
                                <CheckBox x:Name="CbLimitFeedbackPrompts" Content="Reduce feedback and survey prompts" />
                                <CheckBox x:Name="CbDisableOnlineTips" Content="Disable online tips and suggestions" />

                            </StackPanel>
                        </GroupBox>

                    </Grid>
                </TabItem>

                <!-- Apps -->
                <TabItem x:Name="TabApps" Header="Apps">
                    <Grid Margin="5,10,5,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Installed apps -->
                        <GroupBox Header="Installed apps"
                                  Grid.Column="0"
                                  Margin="0,0,8,0">
                            <Grid Margin="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!-- These buttons can exist, UI code can hide them -->
                                <StackPanel Grid.Row="0"
                                            Orientation="Horizontal"
                                            HorizontalAlignment="Right"
                                            Margin="0,0,0,6">
                                    <Button x:Name="BtnScanApps" Content="Scan apps" Width="110" />
                                    <Button x:Name="BtnUninstallSelected"
                                            Content="Uninstall selected"
                                            Width="130"
                                            Margin="6,0,0,0" />
                                </StackPanel>

                                <DataGrid x:Name="AppsGrid"
                                          Grid.Row="1"
                                          Margin="0,4,0,0"
                                          AutoGenerateColumns="False"
                                          HeadersVisibility="Column"
                                          IsReadOnly="True"
                                          GridLinesVisibility="Horizontal"
                                          BorderBrush="{StaticResource BorderBrush}">

                                    <DataGrid.Columns>
                                        <DataGridTemplateColumn Header="" Width="40">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>

                                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" IsReadOnly="True" />
                                        <DataGridTextColumn Header="Publisher" Binding="{Binding Publisher}" Width="220" IsReadOnly="True" />
                                    </DataGrid.Columns>

                                </DataGrid>

                            </Grid>
                        </GroupBox>

                        <!-- Common app installs -->
                        <GroupBox Header="Common app installs"
                                  Grid.Column="1"
                                  Margin="8,0,0,0">
                            <Grid Margin="4">
                                <DataGrid x:Name="InstallGrid"
                                          AutoGenerateColumns="False"
                                          HeadersVisibility="Column"
                                          IsReadOnly="True"
                                          GridLinesVisibility="Horizontal"
                                          BorderBrush="{StaticResource BorderBrush}">

                                    <!-- Grey out already installed rows -->
                                    <DataGrid.RowStyle>
                                        <Style TargetType="DataGridRow">
                                            <Setter Property="Background" Value="#020617"/>
                                            <Setter Property="Foreground" Value="#E5E7EB"/>
                                            <Setter Property="BorderBrush" Value="#374151"/>

                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsInstallable}" Value="False">
                                                    <Setter Property="Opacity" Value="0.45"/>
                                                </DataTrigger>

                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#0B1220"/>
                                                </Trigger>

                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#2563EB"/>
                                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGrid.RowStyle>

                                    <DataGrid.Columns>

                                        <DataGridTemplateColumn Header="" Width="34">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                              IsEnabled="{Binding IsInstallable}"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>

                                        <DataGridTextColumn Header="App" Binding="{Binding Name}" Width="*" IsReadOnly="True" />
                                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120" IsReadOnly="True" />

                                    </DataGrid.Columns>

                                </DataGrid>
                            </Grid>
                        </GroupBox>

                    </Grid>
                </TabItem>

                <!-- Advanced -->
                <TabItem x:Name="TabAdvanced" Header="Advanced">
                    <Grid Margin="5,10,5,5">
                        <GroupBox Header="Advanced features (placeholder)" Margin="0">
                            <TextBlock Text="Advanced cleaning and network / services tools will appear here."
                                       Foreground="{StaticResource TextSubtle}"
                                       TextWrapping="Wrap" />
                        </GroupBox>
                    </Grid>
                </TabItem>

                <!-- Settings (NEW TAB) -->
                <TabItem x:Name="TabSettings" Header="Settings">
                    <Grid Margin="5,10,5,5">
                        <GroupBox Header="Settings" Margin="0">
                            <ContentControl x:Name="SettingsHost" />
                        </GroupBox>
                    </Grid>
                </TabItem>

                <!-- Tickets -->
                <TabItem x:Name="TabTickets" Header="Tickets">
                    <Grid Margin="5,10,5,5">
                        <GroupBox Margin="0">

                            <GroupBox.Header>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Tickets (preview)"
                                               Foreground="#E5E7EB"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center" />

                                    <StackPanel Grid.Column="1"
                                                Orientation="Horizontal"
                                                VerticalAlignment="Center">

                                        <Button x:Name="BtnRefreshTickets"
                                                Width="28"
                                                Height="28"
                                                Margin="0,0,8,0"
                                                ToolTip="Refresh">
                                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                                       FontSize="14"
                                                       Text="&#xE72C;"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center" />
                                        </Button>

                                        <Button x:Name="BtnNewTicket"
                                                Width="28"
                                                Height="28"
                                                Margin="0,0,8,0"
                                                ToolTip="New ticket">
                                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                                       FontSize="14"
                                                       Text="&#xE710;"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center" />
                                        </Button>

                                        <Button x:Name="BtnDeleteTicket"
                                                Width="28"
                                                Height="28"
                                                ToolTip="Delete selected ticket">
                                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                                       FontSize="14"
                                                       Text="&#xE74D;"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center" />
                                        </Button>

                                    </StackPanel>
                                </Grid>
                            </GroupBox.Header>

                            <Grid Margin="4">

                                <DataGrid x:Name="TicketsGrid"
                                          Margin="0,4,0,8"
                                          AutoGenerateColumns="False"
                                          HeadersVisibility="Column"
                                          IsReadOnly="False"
                                          CanUserAddRows="False"
                                          CanUserDeleteRows="False"
                                          GridLinesVisibility="Horizontal"
                                          Background="{StaticResource CardBrush}"
                                          BorderBrush="{StaticResource BorderBrush}"
                                          Foreground="White">

                                    <DataGrid.Resources>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Foreground" Value="#E5E7EB" />
                                            <Setter Property="Background" Value="#111827" />
                                            <Setter Property="FontWeight" Value="SemiBold" />
                                            <Setter Property="BorderBrush" Value="#374151" />
                                        </Style>

                                        <Style TargetType="DataGridRow">
                                            <Setter Property="Background" Value="#020617"/>
                                            <Setter Property="Foreground" Value="#E5E7EB"/>
                                            <Setter Property="BorderBrush" Value="#374151"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#0B1220"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#2563EB"/>
                                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>

                                        <Style TargetType="DataGridCell">
                                            <Setter Property="BorderBrush" Value="#374151"/>
                                            <Setter Property="Padding" Value="6,3"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#2563EB"/>
                                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGrid.Resources>

                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*" />
                                        <DataGridTextColumn Header="Created" Binding="{Binding CreatedAt}" Width="150" IsReadOnly="True" />
                                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="90" IsReadOnly="True" />
                                        <DataGridTextColumn Header="Priority" Binding="{Binding Priority}" Width="*" IsReadOnly="False" />
                                    </DataGrid.Columns>

                                </DataGrid>

                            </Grid>
                        </GroupBox>
                    </Grid>
                </TabItem>

            </TabControl>
        </ContentControl>

        <!-- Status bar -->
        <Border Grid.Row="2"
                Background="#020617"
                Padding="8,6"
                BorderBrush="#111827"
                BorderThickness="1,1,1,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0"
                      Margin="0,0,12,0"
                      VerticalAlignment="Center">
                    <ProgressBar x:Name="MainProgress"
                                 Height="28"
                                 Minimum="0"
                                 Maximum="100"
                                 Value="0"
                                 Foreground="#2563EB"
                                 Background="#1E293B" />
                    <TextBlock x:Name="StatusLabel"
                               Text="Idle"
                               Foreground="White"
                               FontSize="12"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="10,0,0,0"
                               IsHitTestVisible="False" />
                </Grid>

                <StackPanel Grid.Column="1"
                            Orientation="Vertical"
                            VerticalAlignment="Center">
                    <Button x:Name="RunButton"
                            Content="Run selected actions"
                            Width="190"
                            Margin="0,0,0,2"
                            Style="{StaticResource PrimaryButton}" />
                    <TextBlock x:Name="SelectedActionsText"
                               Text="Selected actions: summary coming soon"
                               Foreground="{StaticResource TextSubtle}"
                               FontSize="11"
                               HorizontalAlignment="Right" />
                </StackPanel>

            </Grid>
        </Border>

    </Grid>

</Window>
