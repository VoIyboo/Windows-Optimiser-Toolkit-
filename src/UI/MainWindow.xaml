<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quinn Optimiser Toolkit"
        Height="650"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#0F172A"
        Topmost="True">

    <Window.Resources>
        <!-- Basic colours -->
        <SolidColorBrush x:Key="AccentBrush"   Color="#2563EB" />
        <SolidColorBrush x:Key="CardBrush"     Color="#020617" />
        <SolidColorBrush x:Key="BorderBrush"   Color="#374151" />
        <SolidColorBrush x:Key="TextSubtle"    Color="#9CA3AF" />
        <SolidColorBrush x:Key="SoftSeparator" Color="#4B5563" />

        <!-- Simple button style -->
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="6,3" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="{StaticResource AccentBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}" />
        </Style>

        <!-- Primary CTA button (used for Run selected actions) -->
        <Style x:Key="PrimaryButton"
               TargetType="Button"
               BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- GroupBox style -->
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="10" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Background" Value="{StaticResource CardBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!-- Header bar -->
                            <Border Grid.Row="0"
                                    Background="{TemplateBinding Background}"
                                    Padding="12,4,12,4"
                                    BorderBrush="{StaticResource AccentBrush}"
                                    BorderThickness="0,0,0,2">
                                <TextBlock Text="{TemplateBinding Header}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="#E5E7EB" />
                            </Border>

                            <!-- Content card -->
                            <Border Grid.Row="1"
                                    Margin="0,4,0,0"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter Margin="12,10,12,10" />
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section heading style -->
        <Style x:Key="SectionHeading" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSubtle}" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,0,0,6" />
        </Style>

        <!-- Checkbox style -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="4,2,0,2" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <!-- Softer separators -->
        <Style TargetType="Separator">
            <Setter Property="Margin" Value="0,8,0,8" />
            <Setter Property="Height" Value="1" />
            <Setter Property="Background" Value="{StaticResource SoftSeparator}" />
        </Style>

        <!-- Tabs -->
        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#111827" />
            <Setter Property="Padding" Value="10,4" />
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFFFFF" />
                    <Setter Property="Foreground" Value="{StaticResource AccentBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="#020617"
                Padding="10"
                BorderBrush="#111827"
                BorderThickness="0,0,0,1">
            <DockPanel>
                <StackPanel Orientation="Vertical" DockPanel.Dock="Left">
                    <TextBlock Text="Quinn Optimiser Toolkit"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White" />
                    <TextBlock x:Name="SummaryText"
                               Text="System summary will appear here"
                               Foreground="{StaticResource TextSubtle}"
                               FontSize="11" />
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main tabs -->
        <TabControl Grid.Row="1" x:Name="MainTabs" Margin="10">

            <!-- Tweaks & Cleaning -->
            <TabItem Header="Tweaks &amp; Cleaning">
                <Grid Margin="5,10,5,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Cleaning & Maintenance -->
                    <GroupBox Header="Cleaning &amp; Maintenance"
                              Grid.Column="0"
                              Margin="0,0,8,0">
                        <StackPanel Margin="4">

                            <!-- Storage cleanup -->
                            <TextBlock Text="Storage cleanup"
                                       Style="{StaticResource SectionHeading}" />

                            <CheckBox x:Name="CbCleanTempFiles"
                                      Content="Clear temporary files" />
                            <CheckBox x:Name="CbEmptyRecycleBin"
                                      Content="Empty Recycle Bin" />
                            <CheckBox x:Name="CbCleanDoCache"
                                      Content="Clean Delivery Optimisation cache" />
                            <CheckBox x:Name="CbCleanWuCache"
                                      Content="Clear Windows Update cache" />
                            <CheckBox x:Name="CbCleanThumbCache"
                                      Content="Clean thumbnail cache" />

                            <Separator />

                            <!-- Windows housekeeping -->
                            <TextBlock Text="Windows housekeeping"
                                       Style="{StaticResource SectionHeading}" />

                            <CheckBox x:Name="CbCleanErrorLogs"
                                      Content="Clean old error logs and crash dumps" />
                            <CheckBox x:Name="CbCleanSetupLeftovers"
                                      Content="Remove safe setup / upgrade leftovers" />
                            <CheckBox x:Name="CbClearStoreCache"
                                      Content="Clear Microsoft Store cache" />

                            <Separator />

                            <!-- Browser cleanup (light) -->
                            <TextBlock Text="Browser cleanup (light)"
                                       Style="{StaticResource SectionHeading}" />

                            <CheckBox x:Name="CbEdgeLightCleanup"
                                      Content="Light clean of Microsoft Edge cache" />
                            <CheckBox x:Name="CbChromeLightCleanup"
                                      Content="Light clean of Chrome / Chromium cache" />

                        </StackPanel>
                    </GroupBox>

                    <!-- Tweaks & Privacy -->
                    <GroupBox Header="Tweaks &amp; Privacy"
                              Grid.Column="1"
                              Margin="8,0,0,0">
                        <StackPanel Margin="4">

                            <!-- Start menu & recommendations -->
                            <TextBlock Text="Start menu &amp; recommendations"
                                       Style="{StaticResource SectionHeading}" />

                            <CheckBox x:Name="CbDisableStartRecommended"
                                      Content="Hide Start menu recommended items" />
                            <CheckBox x:Name="CbDisableSuggestedApps"
                                      Content="Turn off suggested apps and promotions" />
                            <CheckBox x:Name="CbDisableTipsStart"
                                      Content="Disable tips and suggestions in Start" />
                            <CheckBox x:Name="CbDisableBingSearch"
                                      Content="Turn off Bing / web results in Start search" />
                            <CheckBox x:Name="CbClassicMoreOptions"
                                      Content="Use classic 'More options' right-click menu" />

                            <Separator />

                            <!-- Taskbar & widgets -->
                            <TextBlock Text="Taskbar &amp; widgets"
                                       Style="{StaticResource SectionHeading}" />

                            <CheckBox x:Name="CbDisableWidgets"
                                      Content="Turn off Widgets" />
                            <CheckBox x:Name="CbDisableTaskbarNews"
                                      Content="Turn off News / taskbar content" />
                            <CheckBox x:Name="CbDisableMeetNow"
                                      Content="Hide legacy Meet Now button (if present)" />

                            <Separator />

                            <!-- Privacy & telemetry -->
                            <TextBlock Text="Privacy &amp; telemetry (safe level)"
                                       Style="{StaticResource SectionHeading}" />

                            <CheckBox x:Name="CbDisableAdvertisingId"
                                      Content="Turn off advertising ID" />
                            <CheckBox x:Name="CbLimitFeedbackPrompts"
                                      Content="Reduce feedback and survey prompts" />
                            <CheckBox x:Name="CbDisableOnlineTips"
                                      Content="Disable online tips and suggestions" />

                        </StackPanel>
                    </GroupBox>

                </Grid>
            </TabItem>

            <!-- Apps -->
            <TabItem Header="Apps">
                <Grid Margin="5,10,5,5">
                    <GroupBox Header="Apps (placeholder)">
                        <TextBlock Text="Installed apps and common installs will appear here."
                                   Foreground="{StaticResource TextSubtle}"
                                   TextWrapping="Wrap" />
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Advanced -->
            <TabItem Header="Advanced">
                <Grid Margin="5,10,5,5">
                    <GroupBox Header="Advanced features (placeholder)">
                        <TextBlock Text="Advanced cleaning and network / services tools will appear here."
                                   Foreground="{StaticResource TextSubtle}"
                                   TextWrapping="Wrap" />
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>

<!-- Status bar -->
<Border Grid.Row="2"
        Background="#020617"
        Padding="8,6"
        BorderBrush="#111827"
        BorderThickness="1,1,1,0">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Progress bar + overlay text -->
        <Grid Grid.Column="0"
              Margin="0,0,12,0"
              VerticalAlignment="Center">

            <!-- Progress bar -->
            <ProgressBar x:Name="MainProgress"
                         Height="20"
                         Minimum="0"
                         Maximum="100"
                         Value="0"
                         Foreground="#2563EB"
                         Background="#1E293B" />

            <!-- Status text OVER the bar -->
            <TextBlock x:Name="StatusLabel"
                       Text="Idle"
                       Foreground="White"
                       FontSize="12"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="10,0,0,0"
                       IsHitTestVisible="False" />
        </Grid>

        <!-- Right: action + summary -->
        <StackPanel Grid.Column="1"
                    Orientation="Vertical"
                    VerticalAlignment="Center">
            <Button x:Name="RunButton"
                    Content="Run selected actions"
                    Width="190"
                    Margin="0,0,0,2"
                    Style="{StaticResource PrimaryButton}" />
            <TextBlock x:Name="SelectedActionsText"
                       Text="Selected actions: summary coming soon"
                       Foreground="{StaticResource TextSubtle}"
                       FontSize="11"
                       HorizontalAlignment="Right" />
        </StackPanel>
    </Grid>
</Border>

    </Grid>
</Window>

