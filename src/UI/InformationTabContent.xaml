<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Margin="5,10,5,5">
    <GroupBox Header="About Quinn Optimiser Toolkit" Margin="0">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="4">
                <TextBlock Text="What is Quinn Optimiser Toolkit"
                           Style="{DynamicResource SectionHeading}" />
                <TextBlock Text="Quinn Optimiser Toolkit is a modular Windows optimisation and IT utility suite designed to streamline cleanup, performance tuning, and app management for technicians."
                           TextWrapping="Wrap"
                           Foreground="White"
                           Margin="0,0,0,10" />

                <TextBlock Text="Tabs overview"
                           Style="{DynamicResource SectionHeading}" />
                <TextBlock Text="• Tweaks &amp; Cleaning: run safe housekeeping tasks, remove clutter, and apply recommended Windows optimisations."
                           TextWrapping="Wrap"
                           Foreground="White" />
                <TextBlock Text="• Apps: scan, install, and remove applications when onboarding or tidying devices."
                           TextWrapping="Wrap"
                           Foreground="White" />
                <TextBlock Text="• Advanced: power-user options that can change system behaviour; review carefully before running."
                           TextWrapping="Wrap"
                           Foreground="White" />
                <TextBlock Text="• Tickets: manage service tickets, status changes, and quick actions for day-to-day support work."
                           TextWrapping="Wrap"
                           Foreground="White"
                           Margin="0,0,0,10" />

                <TextBlock Text="Tips"
                           Style="{DynamicResource SectionHeading}" />
                <TextBlock Text="• Right click tickets to update status quickly."
                           TextWrapping="Wrap"
                           Foreground="White" />
                <TextBlock Text="• Filters are remembered between sessions."
                           TextWrapping="Wrap"
                           Foreground="White" />
                <TextBlock Text="• Changes apply immediately unless stated otherwise."
                           TextWrapping="Wrap"
                           Foreground="White"
                           Margin="0,0,0,10" />

                <TextBlock Text="Version info"
                           Style="{DynamicResource SectionHeading}" />
                <TextBlock Text="App: Quinn Optimiser Toolkit"
                           Foreground="White" />
                <TextBlock Text="Version: V2.7 (stable UI base)"
                           Foreground="White" />
                <TextBlock Text="Build date: Not set"
                           Foreground="White" />
            </StackPanel>
        </ScrollViewer>
    </GroupBox>
</Grid>
