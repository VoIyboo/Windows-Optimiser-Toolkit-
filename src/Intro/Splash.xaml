<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quinn Optimiser Toolkit - Loading"
        Height="320"
        Width="520"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Topmost="True">

    <Window.Resources>
        <!-- Soft radial glow behind the fox -->
        <RadialGradientBrush x:Key="GlowBrush"
                             Center="0.5,0.4"
                             GradientOrigin="0.5,0.4"
                             RadiusX="0.8"
                             RadiusY="0.8">
            <GradientStop Color="#223366" Offset="0.0" />
            <GradientStop Color="#111827" Offset="0.55" />
            <GradientStop Color="#020617" Offset="1.0" />
        </RadialGradientBrush>
    </Window.Resources>

    <Border CornerRadius="16"
            Background="#020617"
            BorderBrush="#1F2937"
            BorderThickness="1"
            Padding="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Logo + glow -->
            <Grid Grid.Row="0"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center">

                <!-- Glow circle -->
                <Ellipse Width="220"
                         Height="220"
                         Fill="{StaticResource GlowBrush}"
                         Opacity="0.85"
                         Panel.ZIndex="0">
                    <Ellipse.Effect>
                        <BlurEffect Radius="25" />
                    </Ellipse.Effect>
                </Ellipse>

                <!-- Studio Voly logo -->
<!-- Studio Voly logo -->
<Image Width="190"
       Stretch="Uniform"
       RenderOptions.BitmapScalingMode="HighQuality"
       HorizontalAlignment="Center"
       VerticalAlignment="Center"
       Panel.ZIndex="1">
    <Image.Source>
        <BitmapImage UriSource="pack://siteoforigin:,,,/src/Intro/StudioVolySplash.png" />
    </Image.Source>
</Image>

            <!-- Status + progress -->
            <StackPanel Grid.Row="1"
                        Margin="40,0,40,24"
                        Orientation="Vertical"
                        HorizontalAlignment="Stretch">
                <TextBlock x:Name="SplashStatusText"
                           Text="Starting Quinn Optimiser Toolkit..."
                           Foreground="White"
                           FontSize="14"
                           Margin="0,0,0,6"
                           TextAlignment="Center" />
                <ProgressBar x:Name="SplashProgressBar"
                             Minimum="0"
                             Maximum="100"
                             Height="18"
                             Value="10" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
