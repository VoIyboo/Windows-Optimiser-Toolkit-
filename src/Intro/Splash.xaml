<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quinn Optimiser Toolkit - Loading"
        Height="320"
        Width="640"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Topmost="True"
        Opacity="0">

    <Window.Resources>
        <!-- Soft glow brush -->
        <RadialGradientBrush x:Key="GlowBrush"
                             GradientOrigin="0.5,0.35"
                             Center="0.5,0.35"
                             RadiusX="0.55"
                             RadiusY="0.55">
            <GradientStop Color="#003B82" Offset="0.0" />
            <GradientStop Color="#133B82" Offset="0.25" />
            <GradientStop Color="#020617" Offset="1.0" />
        </RadialGradientBrush>
    </Window.Resources>

    <Border CornerRadius="18"
            Background="#020617"
            BorderBrush="#1F2937"
            BorderThickness="1"
            Padding="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="80" />
            </Grid.RowDefinitions>

            <!-- Centre content: glow + logo -->
<Grid Grid.Row="0"
      HorizontalAlignment="Center"
      VerticalAlignment="Center">

    <!-- Soft glow behind the logo -->
    <Ellipse Width="260"
             Height="260"
             Fill="{StaticResource GlowBrush}"
             Opacity="0.9"
             Panel.ZIndex="1" />

    <!-- Studio Voly logo -->
    <Image x:Name="LogoImage"
           Source="StudioVolySplash.png"
           Width="220"
           Stretch="Uniform"
           RenderOptions.BitmapScalingMode="HighQuality"
           Panel.ZIndex="2">
        <Image.RenderTransform>
            <TranslateTransform Y="8" />
        </Image.RenderTransform>
    </Image>
</Grid>



            <!-- Bottom: status text + progress bar -->
            <StackPanel Grid.Row="1"
                        Orientation="Vertical"
                        VerticalAlignment="Center"
                        Margin="60,0,60,20">
                <TextBlock x:Name="SplashStatusText"
                           Text="Starting Quinn Optimiser Toolkit..."
                           Foreground="White"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,6" />
                <ProgressBar x:Name="SplashProgressBar"
                             Minimum="0"
                             Maximum="100"
                             Height="18"
                             Value="10" />
            </StackPanel>
        </Grid>
    </Border>

    <!-- Fade in + gentle bob animation -->
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <!-- Fade-in for the whole window -->
                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     From="0"
                                     To="1"
                                     Duration="0:0:0.5" />

                    <!-- Gentle bob on the fox logo -->
                    <DoubleAnimation Storyboard.TargetName="LogoImage"
                                     Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                                     From="8"
                                     To="0"
                                     Duration="0:0:1.2"
                                     AutoReverse="True"
                                     RepeatBehavior="Forever" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
</Window>
