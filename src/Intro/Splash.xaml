<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quinn Optimiser Toolkit - Loading"
        Height="320"
        Width="620"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Topmost="True">

    <Window.Resources>
        <!-- Softer radial glow behind the logo -->
        <RadialGradientBrush x:Key="GlowBrush"
                             Center="0.5,0.4"
                             GradientOrigin="0.5,0.4"
                             RadiusX="0.9"
                             RadiusY="0.9">
            <!-- Bright centre -->
            <GradientStop Color="#223878" Offset="0.0" />
            <!-- Mid fade -->
            <GradientStop Color="#111827" Offset="0.55" />
            <!-- Fade to almost transparent -->
            <GradientStop Color="#020617" Offset="1.0" />
        </RadialGradientBrush>
    </Window.Resources>

    <Grid x:Name="RootGrid"
          Background="#020617"
          Opacity="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="24" />
        </Grid.RowDefinitions>

        <!-- Fade-in only, no bouncing -->
        <Grid.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <!-- Fade the whole splash in -->
                        <DoubleAnimation Storyboard.TargetName="RootGrid"
                                         Storyboard.TargetProperty="Opacity"
                                         From="0"
                                         To="1"
                                         Duration="0:0:0.6" />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>

        <!-- Centre logo + glow -->
        <Grid Grid.Row="0"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
            <!-- Glow -->
            <Ellipse Width="480"
                     Height="480"
                     Fill="{StaticResource GlowBrush}"
                     Opacity="0.45"
                     Panel.ZIndex="1" />
                     RenderOptions.BitmapScalingMode="HighQuality"/>

            <!-- Studio Voly logo -->
            <Image x:Name="LogoImage"
                   Source="StudioVolySplash.png"
                   Width="220"
                   Stretch="Uniform"
                   RenderOptions.BitmapScalingMode="HighQuality"
                   Panel.ZIndex="2">
                <Image.RenderTransform>
                    <!-- Tiny downward offset only, no animation -->
                    <TranslateTransform Y="8" />
                </Image.RenderTransform>
            </Image>
        </Grid>

        <!-- Status + progress bar -->
        <StackPanel Grid.Row="1"
                    Orientation="Vertical"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,16">
            <TextBlock x:Name="SplashStatusText"
                       Text="Starting Quinn Optimiser Toolkit..."
                       Foreground="White"
                       FontSize="14"
                       Margin="0,0,0,4"
                       TextAlignment="Center" />
            <ProgressBar x:Name="SplashProgressBar"
                         Minimum="0"
                         Maximum="100"
                         Height="16"
                         Width="520"
                         Value="10" />
        </StackPanel>
    </Grid>
</Window>
