<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quinn Optimiser Toolkit - Loading"
        Height="320"
        Width="520"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#020617"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Topmost="True">

    <Border CornerRadius="16"
            Background="#020617"
            BorderBrush="#1F2937"
            BorderThickness="1"
            Padding="16"
            Effect="{DynamicResource DropShadowEffect}">
        <Border.Resources>
            <DropShadowEffect x:Key="DropShadowEffect"
                              Color="#000000"
                              BlurRadius="18"
                              ShadowDepth="0"
                              Opacity="0.6" />
        </Border.Resources>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,12">
                <TextBlock Text="Studio Voly"
                           Foreground="#60A5FA"
                           FontSize="18"
                           FontWeight="SemiBold" />
                <TextBlock Text="Quinn Optimiser Toolkit"
                           Foreground="White"
                           FontSize="24"
                           FontWeight="Bold" />
                <TextBlock Text="Getting things ready..."
                           Foreground="#9CA3AF"
                           FontSize="12"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Centre content -->
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0,8,0,8">
                <Grid Width="64" Height="64" Margin="0,0,16,0">
                    <Ellipse Width="64" Height="64" Stroke="#1D4ED8" StrokeThickness="4"/>
                    <Ellipse Width="40" Height="40" Fill="#111827" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="QV"
                               Foreground="#93C5FD"
                               FontWeight="Bold"
                               FontSize="16"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>

                <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                    <TextBlock x:Name="SplashStatusText"
                               Text="Initialising core modules..."
                               Foreground="White"
                               FontSize="14"
                               Margin="0,0,0,4" />
                    <ProgressBar x:Name="SplashProgressBar"
                                 Minimum="0"
                                 Maximum="100"
                                 Height="16"
                                 Width="260"
                                 Value="10" />
                </StackPanel>
            </StackPanel>

            <!-- Footer -->
            <DockPanel Grid.Row="2">
                <TextBlock Text="v2.7 Â· Rebuild layout"
                           Foreground="#6B7280"
                           FontSize="11"
                           DockPanel.Dock="Left"/>
                <TextBlock Text="Studio Voly"
                           Foreground="#6B7280"
                           FontSize="11"
                           DockPanel.Dock="Right"/>
            </DockPanel>
        </Grid>
    </Border>
</Window>

