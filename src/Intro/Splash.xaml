<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quinn Optimiser Toolkit - Loading"
        Height="360"
        Width="640"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Topmost="True">

    <Border CornerRadius="20"
            Background="#020617"
            BorderBrush="#111827"
            BorderThickness="1"
            Padding="24">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Studio Voly fox logo -->
            <Image x:Name="FoxLogoImage"
                   Grid.Row="0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Width="260"
                   Height="260"
                   Stretch="Uniform" />

            <!-- Status + progress at the bottom -->
            <StackPanel Grid.Row="1"
                        Orientation="Vertical"
                        Margin="0,12,0,0">
                <TextBlock x:Name="SplashStatusText"
                           Text="Starting Quinn Optimiser Toolkit..."
                           Foreground="White"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,4" />

                <ProgressBar x:Name="SplashProgressBar"
                             Minimum="0"
                             Maximum="100"
                             Height="16"
                             Width="420"
                             HorizontalAlignment="Center"
                             Value="10" />
            </StackPanel>
        </Grid>
    </Border>
</Window>

