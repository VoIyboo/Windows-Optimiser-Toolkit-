<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quinn Optimiser Toolkit - Loading"
        Height="360"
        Width="560"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Topmost="True">

    <Border CornerRadius="16"
            Background="#020617"
            BorderBrush="#1F2937"
            BorderThickness="1"
            Padding="20"
            Effect="{DynamicResource DropShadowEffect}">
        <Border.Resources>
            <DropShadowEffect x:Key="DropShadowEffect"
                              Color="#000000"
                              BlurRadius="18"
                              ShadowDepth="0"
                              Opacity="0.6" />
        </Border.Resources>

        <Grid>
            <Grid.RowDefinitions>
                <!-- Header -->
                <RowDefinition Height="Auto" />
                <!-- Logo area -->
                <RowDefinition Height="*" />
                <!-- Status + progress bar at the bottom -->
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0"
                        Orientation="Vertical"
                        Margin="0,0,0,8">
                <TextBlock Text="Studio Voly"
                           Foreground="#60A5FA"
                           FontSize="18"
                           FontWeight="SemiBold" />
                <TextBlock Text="Quinn Optimiser Toolkit"
                           Foreground="White"
                           FontSize="26"
                           FontWeight="Bold" />
            </StackPanel>

            <!-- Centre logo -->
            <StackPanel Grid.Row="1"
                        Orientation="Vertical"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0,4,0,4">
                <!-- This is where we inject the Studio Voly fox from code -->
                <Image x:Name="LogoImage"
                       Width="220"
                       Height="220"
                       Stretch="Uniform" />
            </StackPanel>

            <!-- Status + progress bar at bottom -->
            <StackPanel Grid.Row="2"
                        Orientation="Vertical"
                        Margin="0,12,0,0">
                <TextBlock x:Name="SplashStatusText"
                           Text="Starting Quinn Optimiser Toolkit..."
                           Foreground="White"
                           FontSize="14"
                           Margin="0,0,0,6"
                           HorizontalAlignment="Center" />
                <ProgressBar x:Name="SplashProgressBar"
                             Minimum="0"
                             Maximum="100"
                             Height="18"
                             Width="340"
                             Value="10"
                             HorizontalAlignment="Center" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
