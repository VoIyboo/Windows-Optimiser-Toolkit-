<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quinn Optimiser Toolkit - Loading"
        Height="320"
        Width="520"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Topmost="True">

    <!-- Global resources -->
    <Window.Resources>
        <!-- Soft, large radial glow -->
        <RadialGradientBrush x:Key="GlowBrush"
                             Center="0.5,0.45"
                             GradientOrigin="0.5,0.45"
                             RadiusX="1.2"
                             RadiusY="1.2">
            <GradientStop Color="#1A2E5F" Offset="0.0" />
            <GradientStop Color="#0D1A33" Offset="0.4" />
            <GradientStop Color="#060A14" Offset="0.75" />
            <GradientStop Color="#020617" Offset="1.0" />
        </RadialGradientBrush>
    </Window.Resources>

    <Border CornerRadius="16"
            Background="#020617"
            BorderBrush="#1F2937"
            BorderThickness="1"
            Padding="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Logo + glow zone -->
            <Grid Grid.Row="0"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center">
                <!-- Glow -->
                <Ellipse Width="420"
                         Height="420"
                         Fill="{StaticResource GlowBrush}"
                         Opacity="0.45"
                         RenderOptions.BitmapScalingMode="HighQuality" />

                <!-- Studio Voly logo -->
                <Image Source="StudioVolySplash.png"
                       Width="260"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       RenderOptions.BitmapScalingMode="HighQuality" />
            </Grid>

            <!-- Status + progress -->
            <StackPanel Grid.Row="1"
                        Margin="40,0,40,24"
                        Orientation="Vertical"
                        HorizontalAlignment="Stretch">
                <TextBlock x:Name="SplashStatusText"
                           Text="Starting Quinn Optimiser Toolkit..."
                           Foreground="White"
                           FontSize="14"
                           Margin="0,0,0,6"
                           TextAlignment="Center" />
                <ProgressBar x:Name="SplashProgressBar"
                             Minimum="0"
                             Maximum="100"
                             Height="18"
                             Value="10" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
