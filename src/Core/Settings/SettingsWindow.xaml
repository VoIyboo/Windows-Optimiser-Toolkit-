<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Width="600"
        Height="520"
        WindowStartupLocation="CenterOwner"
        Background="#0F172A">

    <Window.Resources>
        <SolidColorBrush x:Key="AccentBrush" Color="#2563EB" />
        <SolidColorBrush x:Key="CardBrush" Color="#020617" />
        <SolidColorBrush x:Key="BorderBrush" Color="#374151" />
        <SolidColorBrush x:Key="TextSubtle" Color="#9CA3AF" />
        <SolidColorBrush x:Key="LineBrush" Color="#E5E7EB" />

        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Width" Value="34" />
            <Setter Property="Height" Value="34" />
            <Setter Property="Background" Value="{StaticResource AccentBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="34" />
            <Setter Property="Background" Value="{StaticResource CardBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
            <Setter Property="Padding" Value="10,0" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="{StaticResource CardBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
            <Setter Property="Padding" Value="6" />
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="6,4" />
            <Setter Property="Foreground" Value="#E5E7EB" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0B1220" />
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#2563EB" />
                    <Setter Property="Foreground" Value="White" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern dark DatePicker styling (textbox + drop button + popup calendar) -->
<Style TargetType="DatePicker">
    <Setter Property="Foreground" Value="#E5E7EB"/>
    <Setter Property="Background" Value="{StaticResource CardBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="10,0"/>
    <Setter Property="Height" Value="36"/>
    <Setter Property="HorizontalContentAlignment" Value="Left"/>
    <Setter Property="Template">
        <Setter.Value>
            <ControlTemplate TargetType="DatePicker">
                <Grid>
                    <Border x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8"
                            SnapsToDevicePixels="True">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="44"/>
                            </Grid.ColumnDefinitions>

                            <DatePickerTextBox x:Name="PART_TextBox"
                                               Grid.Column="0"
                                               Background="Transparent"
                                               Foreground="{TemplateBinding Foreground}"
                                               BorderThickness="0"
                                               VerticalContentAlignment="Center"
                                               Padding="10,0"
                                               Focusable="True"/>

                            <Button x:Name="PART_Button"
                                    Grid.Column="1"
                                    Focusable="False"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand">
                                <Grid Width="44" Height="34">
                                    <Border Margin="6,4,6,4"
                                            Background="#0B1220"
                                            CornerRadius="7"
                                            BorderBrush="#1F2937"
                                            BorderThickness="1"/>
                                    <TextBlock Text="&#xE787;"
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="16"
                                               Foreground="#E5E7EB"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Button>
                        </Grid>
                    </Border>

                    <Popup x:Name="PART_Popup"
                           Placement="Bottom"
                           StaysOpen="False"
                           AllowsTransparency="True"
                           PopupAnimation="Fade">
                        <Border Background="#0B1220"
                                BorderBrush="#1F2937"
                                BorderThickness="1"
                                CornerRadius="12"
                                Padding="10"
                                SnapsToDevicePixels="True">
                            <Calendar x:Name="PART_Calendar"
                                      Background="#0B1220"
                                      Foreground="#E5E7EB"
                                      BorderThickness="0"
                                      SelectionMode="SingleDate"
                                      IsTodayHighlighted="True">
                                <Calendar.Resources>

                                    <!-- Calendar navigation header -->
                                    <Style TargetType="CalendarItem">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="CalendarItem">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="*"/>
                                                        </Grid.RowDefinitions>

                                                        <Grid Grid.Row="0" Margin="0,0,0,8">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>

                                                            <Button x:Name="PART_PreviousButton"
                                                                    Grid.Column="0"
                                                                    Width="34" Height="34"
                                                                    Background="#0F172A"
                                                                    BorderBrush="#1F2937"
                                                                    BorderThickness="1"
                                                                    Cursor="Hand">
                                                                <TextBlock Text="&#xE72B;"
                                                                           FontFamily="Segoe MDL2 Assets"
                                                                           Foreground="#E5E7EB"
                                                                           HorizontalAlignment="Center"
                                                                           VerticalAlignment="Center"/>
                                                            </Button>

                                                            <TextBlock Grid.Column="1"
                                                                       Text="{Binding DisplayDate, RelativeSource={RelativeSource AncestorType=Calendar}, StringFormat={}{0:MMMM yyyy}}"
                                                                       Foreground="#E5E7EB"
                                                                       FontSize="14"
                                                                       FontWeight="SemiBold"
                                                                       VerticalAlignment="Center"
                                                                       HorizontalAlignment="Center"/>

                                                            <Button x:Name="PART_NextButton"
                                                                    Grid.Column="2"
                                                                    Width="34" Height="34"
                                                                    Background="#0F172A"
                                                                    BorderBrush="#1F2937"
                                                                    BorderThickness="1"
                                                                    Cursor="Hand"
                                                                    Margin="8,0,0,0">
                                                                <TextBlock Text="&#xE72A;"
                                                                           FontFamily="Segoe MDL2 Assets"
                                                                           Foreground="#E5E7EB"
                                                                           HorizontalAlignment="Center"
                                                                           VerticalAlignment="Center"/>
                                                            </Button>
                                                        </Grid>

                                                        <CalendarDayButton x:Name="PART_CalendarDayButton"
                                                                           Grid.Row="1"/>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>

                                    <!-- Day buttons -->
                                    <Style TargetType="CalendarDayButton">
                                        <Setter Property="Foreground" Value="#E5E7EB"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="CalendarDayButton">
                                                    <Border x:Name="DayBd"
                                                            CornerRadius="18"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            Width="36" Height="36"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="DayBd" Property="Background" Value="#0F172A"/>
                                                            <Setter TargetName="DayBd" Property="BorderBrush" Value="#1F2937"/>
                                                            <Setter TargetName="DayBd" Property="BorderThickness" Value="1"/>
                                                        </Trigger>

                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="DayBd" Property="Background" Value="#2563EB"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </Trigger>

                                                        <Trigger Property="IsToday" Value="True">
                                                            <Setter TargetName="DayBd" Property="BorderBrush" Value="#2563EB"/>
                                                            <Setter TargetName="DayBd" Property="BorderThickness" Value="1"/>
                                                        </Trigger>

                                                        <Trigger Property="IsInactive" Value="True">
                                                            <Setter Property="Foreground" Value="#6B7280"/>
                                                        </Trigger>

                                                        <Trigger Property="IsBlackout" Value="True">
                                                            <Setter Property="Foreground" Value="#374151"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>

                                    <!-- Day of week headers -->
                                    <Style TargetType="CalendarDayButton" x:Key="{x:Static Calendar.DayButtonStyleKey}">
                                        <Setter Property="Foreground" Value="#9CA3AF"/>
                                    </Style>

                                </Calendar.Resources>
                            </Calendar>
                        </Border>
                    </Popup>
                </Grid>

                <ControlTemplate.Triggers>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter TargetName="Bd" Property="Opacity" Value="0.5"/>
                    </Trigger>
                    <Trigger Property="IsKeyboardFocusWithin" Value="True">
                        <Setter TargetName="Bd" Property="BorderBrush" Value="#2563EB"/>
                    </Trigger>
                </ControlTemplate.Triggers>
            </ControlTemplate>
        </Setter.Value>
    </Setter>
</Style>

