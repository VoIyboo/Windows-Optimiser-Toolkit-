<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Width="700"
        Height="620"
        WindowStartupLocation="CenterOwner"
        Background="#0F172A">

    <Window.Resources>

        <!-- Core colours -->
        <SolidColorBrush x:Key="AccentBrush" Color="#2563EB"/>
        <SolidColorBrush x:Key="CardBrush" Color="#020617"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#374151"/>
        <SolidColorBrush x:Key="TextSubtle" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="DividerBrush" Color="#1F2937"/>

        <!-- Icon button -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Width" Value="34"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- ListBox -->
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6"/>
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0B1220"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#2563EB"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Calendar (big + readable) -->
        <Style TargetType="Calendar">
            <Setter Property="Background" Value="#0B1220"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>

        <Style TargetType="CalendarDayButton">
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style TargetType="CalendarButton">
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">

        <StackPanel Margin="20" Width="620">

            <!-- Mailboxes -->
            <TextBlock Text="Monitored mailbox addresses"
                       Foreground="White"
                       FontSize="14"
                       FontWeight="SemiBold"/>

            <Border Height="1" Background="{StaticResource DividerBrush}" Margin="0,8,0,16"/>

            <DockPanel Margin="0,0,0,12">
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <Button x:Name="BtnAdd" Style="{StaticResource IconButton}" Margin="0,0,6,0">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE710;"/>
                    </Button>
                    <Button x:Name="BtnRemove" Style="{StaticResource IconButton}">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74D;"/>
                    </Button>
                </StackPanel>
                <TextBox x:Name="TxtEmail"/>
            </DockPanel>

            <ListBox x:Name="LstEmails" MinHeight="160"/>

            <!-- Email sync date -->
            <TextBlock Text="Email sync start date"
                       Foreground="White"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="0,24,0,0"/>

            <Border Height="1" Background="{StaticResource DividerBrush}" Margin="0,8,0,16"/>

            <!-- Calendar card -->
            <Border Background="#0B1220"
                    BorderBrush="#1F2937"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="16">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Calendar x:Name="CalEmailCutoff"
                              Grid.Column="0"
                              SelectionMode="SingleDate"
                              IsTodayHighlighted="True"
                              MinHeight="340"/>

                    <Button x:Name="BtnFollowToday"
                            Grid.Column="1"
                            Style="{StaticResource IconButton}"
                            Width="32"
                            Height="32"
                            Margin="12,8,0,0"
                            VerticalAlignment="Top"
                            ToolTip="Follow today">
                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                   FontSize="16"
                                   Text="&#xE121;"/>
                    </Button>
                </Grid>
            </Border>

            <TextBlock x:Name="LblHint"
                       Text="Start date follows today until you select a date."
                       Foreground="{StaticResource TextSubtle}"
                       FontSize="12"
                       Margin="0,10,0,0"/>

        </StackPanel>

    </ScrollViewer>
</Window>
