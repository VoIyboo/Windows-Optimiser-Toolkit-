<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Width="600"
        Height="420"
        WindowStartupLocation="CenterOwner"
        Background="#0F172A">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Settings"
                   FontSize="20"
                   FontWeight="SemiBold"
                   Foreground="White"
                   Margin="0,0,0,12"/>

        <GroupBox Grid.Row="1"
                  Header="Ticketing"
                  Background="#020617"
                  BorderBrush="#374151"
                  BorderThickness="1">

            <StackPanel Margin="12">

                <TextBlock Text="Monitored mailbox addresses"
                           Foreground="#E5E7EB"
                           Margin="0,0,0,6"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBox x:Name="TxtEmail"
                             Width="320"
                             Margin="0,0,8,0"
                             Background="#020617"
                             Foreground="White"
                             BorderBrush="#374151"/>

                    <Button x:Name="BtnAdd"
                            Content="Add"
                            Width="80"
                            Margin="0,0,6,0"/>

                    <Button x:Name="BtnRemove"
                            Content="Remove"
                            Width="80"/>
                </StackPanel>

                <ListBox x:Name="LstEmails"
                         Height="160"
                         Background="#020617"
                         Foreground="White"
                         BorderBrush="#374151"/>

                <TextBlock x:Name="LblHint"
                           Margin="0,8,0,0"
                           Foreground="#9CA3AF"
                           FontSize="12"/>

            </StackPanel>
        </GroupBox>
    </Grid>
</Window>

