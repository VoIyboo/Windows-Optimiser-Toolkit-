<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Width="600"
        Height="420"
        WindowStartupLocation="CenterOwner"
        Background="#0F172A">

    <Window.Resources>
        <SolidColorBrush x:Key="AccentBrush" Color="#2563EB" />
        <SolidColorBrush x:Key="CardBrush" Color="#020617" />
        <SolidColorBrush x:Key="BorderBrush" Color="#374151" />
        <SolidColorBrush x:Key="TextSubtle" Color="#9CA3AF" />
        <SolidColorBrush x:Key="LineBrush" Color="#E5E7EB" />

        <!-- Icon button -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Width" Value="34" />
            <Setter Property="Height" Value="34" />
            <Setter Property="Background" Value="{StaticResource AccentBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="34" />
            <Setter Property="Background" Value="{StaticResource CardBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
            <Setter Property="Padding" Value="10,0" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="{StaticResource CardBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
            <Setter Property="Padding" Value="6" />
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="6,4" />
            <Setter Property="Foreground" Value="#E5E7EB" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0B1220" />
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#2563EB" />
                    <Setter Property="Foreground" Value="White" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Content only, no full-width layout container -->
    <StackPanel Margin="16"
                HorizontalAlignment="Left"
                Width="820">

        <!-- Section title -->
        <TextBlock Text="Monitored mailbox addresses"
                   Foreground="White"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="0,0,0,8" />

        <!-- Thin white separator -->
        <Border Height="1"
                Background="{StaticResource LineBrush}"
                Opacity="0.25"
                Margin="0,0,0,14" />

        <!-- Input row -->
        <DockPanel LastChildFill="True"
                   Margin="0,0,0,14">

            <StackPanel DockPanel.Dock="Right"
                        Orientation="Horizontal">

                <Button x:Name="BtnAdd"
                        Style="{StaticResource IconButton}"
                        Margin="0,0,6,0"
                        ToolTip="Add address">
                    <TextBlock FontFamily="Segoe MDL2 Assets"
                               FontSize="16"
                               Text="&#xE710;" />
                </Button>

                <Button x:Name="BtnRemove"
                        Style="{StaticResource IconButton}"
                        ToolTip="Remove selected address">
                    <TextBlock FontFamily="Segoe MDL2 Assets"
                               FontSize="16"
                               Text="&#xE74D;" />
                </Button>

            </StackPanel>

            <TextBox x:Name="TxtEmail"
                     ToolTip="Enter an email address" />

        </DockPanel>

        <!-- Completed list box -->
        <Border Background="{StaticResource CardBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="6"
                Padding="8">

            <ListBox x:Name="LstEmails"
                     MinHeight="190"
                     BorderThickness="0"
                     Background="Transparent" />
        </Border>

        <!-- Hint -->
        <TextBlock x:Name="LblHint"
                   Margin="0,12,0,0"
                   Foreground="{StaticResource TextSubtle}"
                   FontSize="12" />

    </StackPanel>
</Window>
