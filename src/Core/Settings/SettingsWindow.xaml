<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:primitives="clr-namespace:System.Windows.Controls.Primitives;assembly=PresentationFramework"
        Title="Settings"
        Width="600"
        Height="520"
        WindowStartupLocation="CenterOwner"
        Background="#0F172A">

    <Window.Resources>
        <SolidColorBrush x:Key="AccentBrush" Color="#2563EB" />
        <SolidColorBrush x:Key="CardBrush" Color="#020617" />
        <SolidColorBrush x:Key="BorderBrush" Color="#374151" />
        <SolidColorBrush x:Key="TextSubtle" Color="#9CA3AF" />
        <SolidColorBrush x:Key="LineBrush" Color="#E5E7EB" />

        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Width" Value="34" />
            <Setter Property="Height" Value="34" />
            <Setter Property="Background" Value="{StaticResource AccentBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="34" />
            <Setter Property="Background" Value="{StaticResource CardBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
            <Setter Property="Padding" Value="10,0" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="{StaticResource CardBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
            <Setter Property="Padding" Value="6" />
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="6,4" />
            <Setter Property="Foreground" Value="#E5E7EB" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0B1220" />
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#2563EB" />
                    <Setter Property="Foreground" Value="White" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Day numbers -->
        <Style x:Key="QOT_CalendarDayButtonStyle" TargetType="{x:Type primitives:CalendarDayButton}">
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type primitives:CalendarDayButton}">
                        <Border x:Name="DayBd"
                                CornerRadius="18"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Width="36"
                                Height="36"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>

                        <ControlTemplate.Triggers>

                            <!-- Weekday headers come through as disabled buttons -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#9CA3AF" />
                            </Trigger>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="DayBd" Property="Background" Value="#0F172A" />
                                <Setter TargetName="DayBd" Property="BorderBrush" Value="#1F2937" />
                                <Setter TargetName="DayBd" Property="BorderThickness" Value="1" />
                                <Setter Property="Foreground" Value="#FFFFFF" />
                            </Trigger>

                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="DayBd" Property="Background" Value="#2563EB" />
                                <Setter Property="Foreground" Value="#FFFFFF" />
                            </Trigger>

                            <Trigger Property="IsToday" Value="True">
                                <Setter TargetName="DayBd" Property="BorderBrush" Value="#2563EB" />
                                <Setter TargetName="DayBd" Property="BorderThickness" Value="1" />
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Month title and nav buttons -->
        <Style x:Key="QOT_CalendarButtonStyle" TargetType="{x:Type primitives:CalendarButton}">
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="6,2" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style x:Key="QOT_CalendarStyle" TargetType="{x:Type Calendar}">
            <Setter Property="Background" Value="#0B1220" />
            <Setter Property="Foreground" Value="#E5E7EB" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">

        <StackPanel Margin="16"
                    HorizontalAlignment="Left"
                    Width="460">

            <TextBlock Text="Monitored mailbox addresses"
                       Foreground="White"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="0,0,0,8" />

            <Border Height="1"
                    Background="{StaticResource LineBrush}"
                    Opacity="0.25"
                    Margin="0,0,0,14" />

            <DockPanel LastChildFill="True"
                       Margin="0,0,0,14">

                <StackPanel DockPanel.Dock="Right"
                            Orientation="Horizontal">

                    <Button x:Name="BtnAdd"
                            Style="{StaticResource IconButton}"
                            Margin="0,0,6,0"
                            ToolTip="Add address">
                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                   FontSize="16"
                                   Text="&#xE710;" />
                    </Button>

                    <Button x:Name="BtnRemove"
                            Style="{StaticResource IconButton}"
                            ToolTip="Remove selected address">
                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                   FontSize="16"
                                   Text="&#xE74D;" />
                    </Button>

                </StackPanel>

                <TextBox x:Name="TxtEmail"
                         ToolTip="Enter an email address" />
            </DockPanel>

            <Border Background="{StaticResource CardBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="8">

                <ListBox x:Name="LstEmails"
                         MinHeight="190"
                         BorderThickness="0"
                         Background="Transparent" />
            </Border>

            <TextBlock Text="Email sync start date"
                       Foreground="White"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="0,16,0,8" />

            <Border Height="1"
                    Background="{StaticResource LineBrush}"
                    Opacity="0.25"
                    Margin="0,0,0,14" />

            <DockPanel LastChildFill="True"
                       Margin="0,0,0,10">

                <Button x:Name="BtnUseToday"
                        Style="{StaticResource IconButton}"
                        DockPanel.Dock="Right"
                        ToolTip="Follow today (do not pin a date)">
                    <TextBlock FontFamily="Segoe MDL2 Assets"
                               FontSize="16"
                               Text="&#xE121;" />
                </Button>

                <TextBox x:Name="TxtEmailCutoff"
                         IsReadOnly="True"
                         ToolTip="If no date is pinned, this follows today automatically" />
            </DockPanel>

            <Border Background="#0B1220"
                    BorderBrush="#1F2937"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="10">

                <Calendar x:Name="CalEmailCutoff"
                          Style="{StaticResource QOT_CalendarStyle}"
                          CalendarButtonStyle="{StaticResource QOT_CalendarButtonStyle}"
                          CalendarDayButtonStyle="{StaticResource QOT_CalendarDayButtonStyle}"
                          SelectionMode="SingleDate"
                          IsTodayHighlighted="True" />
            </Border>

            <TextBlock x:Name="LblHint"
                       Margin="0,10,0,0"
                       Foreground="{StaticResource TextSubtle}"
                       FontSize="12" />

            <Border Height="16"
                    Background="Transparent" />

        </StackPanel>

    </ScrollViewer>

</Window>
