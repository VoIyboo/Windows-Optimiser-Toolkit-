<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Width="600"
        Height="420"
        WindowStartupLocation="CenterOwner"
        Background="#0F172A">

    <Window.Resources>

        <SolidColorBrush x:Key="AccentBrush" Color="#2563EB" />
        <SolidColorBrush x:Key="CardBrush" Color="#020617" />
        <SolidColorBrush x:Key="BorderBrush" Color="#374151" />
        <SolidColorBrush x:Key="TextSubtle" Color="#9CA3AF" />

        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Width" Value="34" />
            <Setter Property="Height" Value="34" />
            <Setter Property="Background" Value="{StaticResource AccentBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="34" />
            <Setter Property="MinWidth" Value="260" />
            <Setter Property="Background" Value="{StaticResource CardBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
            <Setter Property="Padding" Value="10,0" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="{StaticResource CardBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
            <Setter Property="Padding" Value="6" />
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="6,4" />
            <Setter Property="Foreground" Value="#E5E7EB" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0B1220" />
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#2563EB" />
                    <Setter Property="Foreground" Value="White" />
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <!-- No extra "Settings" title here.
         MainWindow already provides the Settings header. -->
    <Grid Margin="0">

        <GroupBox Header="Ticketing"
                  Background="{StaticResource CardBrush}"
                  BorderBrush="{StaticResource BorderBrush}"
                  BorderThickness="1"
                  Margin="0">

            <Grid Margin="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Monitored mailbox addresses"
                           Foreground="#E5E7EB"
                           Margin="0,0,0,8"/>

                <!-- Input + icons aligned properly -->
                <DockPanel Grid.Row="1" LastChildFill="True" Margin="0,0,0,10">

                    <StackPanel DockPanel.Dock="Right"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">

                        <Button x:Name="BtnAdd"
                                Style="{StaticResource IconButton}"
                                Margin="0,0,6,0"
                                ToolTip="Add address">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       FontSize="16"
                                       Text="&#xE710;"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Button>

                        <Button x:Name="BtnRemove"
                                Style="{StaticResource IconButton}"
                                Margin="0"
                                ToolTip="Remove selected address">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       FontSize="16"
                                       Text="&#xE74D;"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Button>

                    </StackPanel>

                    <TextBox x:Name="TxtEmail"
                             ToolTip="Enter an email address"/>

                </DockPanel>

                <ListBox x:Name="LstEmails"
                         Grid.Row="2"
                         MinHeight="170" />

                <TextBlock x:Name="LblHint"
                           Grid.Row="3"
                           Margin="0,10,0,0"
                           Foreground="{StaticResource TextSubtle}"
                           FontSize="12"/>

            </Grid>
        </GroupBox>

    </Grid>
</Window>
