<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Width="600"
        Height="520"
        WindowStartupLocation="CenterOwner"
        Background="#0F172A">

    <Window.Resources>
        <SolidColorBrush x:Key="AccentBrush" Color="#2563EB" />
        <SolidColorBrush x:Key="CardBrush" Color="#020617" />
        <SolidColorBrush x:Key="BorderBrush" Color="#374151" />
        <SolidColorBrush x:Key="TextSubtle" Color="#9CA3AF" />
        <SolidColorBrush x:Key="LineBrush" Color="#E5E7EB" />

        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Width" Value="34" />
            <Setter Property="Height" Value="34" />
            <Setter Property="Background" Value="{StaticResource AccentBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="34" />
            <Setter Property="Background" Value="{StaticResource CardBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10,0" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="{StaticResource CardBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="6" />
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="6,4" />
            <Setter Property="Foreground" Value="#E5E7EB" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0B1220" />
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#2563EB" />
                    <Setter Property="Foreground" Value="White" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Calendar styling: readable in dark -->
        <Style TargetType="Calendar">
            <Setter Property="Background" Value="#0B1220" />
            <Setter Property="Foreground" Value="#E5E7EB" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <Style TargetType="CalendarDayButton">
            <Setter Property="Foreground" Value="#E5E7EB" />
            <Setter Property="Background" Value="Transparent" />
        </Style>

        <Style TargetType="CalendarButton">
            <Setter Property="Foreground" Value="#E5E7EB" />
            <Setter Property="Background" Value="Transparent" />
        </Style>

        <Style TargetType="CalendarItem">
            <Setter Property="Foreground" Value="#E5E7EB" />
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">

        <StackPanel Margin="16"
                    HorizontalAlignment="Left"
                    Width="460">

            <!-- ========================= -->
            <!-- Monitored mailbox addresses -->
            <!-- ========================= -->
            <TextBlock Text="Monitored mailbox addresses"
                       Foreground="White"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="0,0,0,8" />

            <Border Height="1"
                    Background="{StaticResource LineBrush}"
                    Opacity="0.25"
                    Margin="0,0,0,14" />

            <DockPanel LastChildFill="True"
                       Margin="0,0,0,14">

                <StackPanel DockPanel.Dock="Right"
                            Orientation="Horizontal">

                    <Button x:Name="BtnAdd"
                            Style="{StaticResource IconButton}"
                            Margin="0,0,6,0"
                            ToolTip="Add address">
                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                   FontSize="16"
                                   Text="&#xE710;" />
                    </Button>

                    <Button x:Name="BtnRemove"
                            Style="{StaticResource IconButton}"
                            ToolTip="Remove selected address">
                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                   FontSize="16"
                                   Text="&#xE74D;" />
                    </Button>

                </StackPanel>

                <TextBox x:Name="TxtEmail"
                         ToolTip="Enter an email address" />
            </DockPanel>

            <Border Background="{StaticResource CardBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="8"
                    Margin="0,0,0,10">

                <ListBox x:Name="LstEmails"
                         MinHeight="190"
                         BorderThickness="0"
                         Background="Transparent" />
            </Border>

            <!-- ========================= -->
            <!-- Email sync start date -->
            <!-- ========================= -->
            <TextBlock Text="Email sync start date"
                       Foreground="White"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="0,10,0,8" />

            <Border Height="1"
                    Background="{StaticResource LineBrush}"
                    Opacity="0.25"
                    Margin="0,0,0,14" />

            <!-- Big classy card (Calendar uses the space, button on right) -->
            <Border Background="#0B1220"
                    BorderBrush="#1F2937"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="16">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Viewbox scales the calendar to fill this area neatly -->
                    <Viewbox Grid.Column="0"
                             Stretch="Uniform"
                             StretchDirection="Both"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             Margin="0,0,14,0"
                             MaxHeight="360">

                        <!-- Design size that scales up nicely -->
                        <Calendar x:Name="CalEmailCutoff"
                                  Width="520"
                                  Height="360"
                                  SelectionMode="SingleDate"
                                  IsTodayHighlighted="True" />
                    </Viewbox>

                    <Button x:Name="BtnFollowToday"
                            Grid.Column="1"
                            Style="{StaticResource IconButton}"
                            Width="36"
                            Height="36"
                            Margin="0,4,0,0"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right"
                            ToolTip="Follow today (do not pin a date)">
                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                   FontSize="18"
                                   Text="&#xE121;" />
                    </Button>
                </Grid>
            </Border>

            <TextBlock x:Name="LblHint"
                       Margin="0,10,0,0"
                       Foreground="{StaticResource TextSubtle}"
                       FontSize="12" />

            <Border Height="16"
                    Background="Transparent" />

        </StackPanel>

    </ScrollViewer>

</Window>
